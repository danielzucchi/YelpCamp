<% include ../partials/header %>

<div class="container">

    <div class="row">
        <h1 class="heading">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="campground[name]" value="<%= campground.name %>" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" min="0.00" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Description" name="campground[description]" rows="10"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
