<% include ../partials/header %>


<div class="container">

    <div class="row justify-content-center" style="margin-top: 20px;">
        <div class="col-md-12 text-center">
            <h1 class="heading">Create a New Campground</h1>
        </div>
        <div class="col-lg-4 col-xs-12">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price per Night" name="price" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="location">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Description" name="description" rows="10"
                    ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
