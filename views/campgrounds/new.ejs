<% include ../partials/header %>


<div class="container">

    <div class="row">
        <h1 class="heading">Create a new Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price per Night" name="price" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="location">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Description" name="description" rows="10"
                    ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
