<% include ../partials/header %>

<div class="container">

    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <h1 class="heading">Edit Comment</h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="comment[text]"><%= comment.text %> </textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
