<% include ../partials/header %>

<div class="container">

    <div class="row justify-content-center" style="margin-top: 20px;">
        <div class="col-md-12 text-center">
            <h1 class="heading">Edit Comment</h1>
        </div>
        <div class="col-lg-4 col-xs-12">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="comment[text]"><%= comment.text %> </textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
